<div class="container">
<h1><%= @cocktail.name %></h1>

<p>This delish cocktail contains</p>

<% @cocktail.doses.each do |dose| %>
<p> <%= dose.ingredient.name %> </p>
<p> <%= dose.description %></p>
<%= link_to 'Delete', cocktail_dose_path(@cocktail, dose),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail[:id]) %>
<%= link_to 'See all cocktails', cocktails_path %>
</div>
